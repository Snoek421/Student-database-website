@model Student

@{
    ViewData["Title"] = "Delete";
}

<h1>Confirm Deletion</h1>
<h3>@Model.FirstName @Model.LastName (@Model.Age)</h3>

 <form asp-controller="Student" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="StudentID" />
    <input type="submit" value="Delete" class="btn btn-danger" /> 
    <a asp-controller="Students" asp-action="List" class="btn btn-primary">Cancel</a>
 </form>