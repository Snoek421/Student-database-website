@model StudentViewModel

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="All" class="text-danger"></div> @*div for error messages, that shows asp-validation results*@
			<input type="hidden" asp-for="ActiveStudent.StudentID" /> @*hidden student id to identify which student has been selected from the list*@
			<div class="form-group">
				<label asp-for="ActiveStudent.FirstName" class="control-label"></label>
				<input asp-for="ActiveStudent.FirstName" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="ActiveStudent.LastName" class="control-label"></label>
				<input asp-for="ActiveStudent.LastName" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="ActiveStudent.DateOfBirth" class="control-label"></label>
				<input asp-for="ActiveStudent.DateOfBirth" type="text" id="datepicker" class="form-control" placeholder="MM/dd/YYYY" /> @*textbox used for jqueryui datepicker*@
			</div>
			<div class="form-group">
				<label asp-for="ActiveStudent.GPA" class="control-label"></label>
				<input asp-for="ActiveStudent.GPA" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="ActiveStudent.SchoolProgramID">Program</label>
				<select asp-for="ActiveStudent.SchoolProgramID" class="form-control">
					<option value="">Select a program of study..</option> 
					@foreach (SchoolProgram program in Model.Programs) @*add each program in programs list into dropdown list as an option*@
					{
						<option value="@program.SchoolProgramID">@program.SchoolProgramName</option>
					}
				</select>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
				<a asp-controller="Students" asp-action="List" class="btn btn-primary">Cancel</a>
			</div>
		</form>
	</div>
</div>



<script>
	$("#datepicker").datepicker({ @*datepicker code for jqueryui*@
		maxDate: "-0", /*prevents datepicker from allowing future dates*/
		yearRange: "-80:+0", /*shows 80 years before current year in the year dropdown*/
		dateFormat: "mm/dd/yy", /*sets date format to desired format*/
		constrainInput: true, /*prevents user from inputting data that doesn't fit the datepicker*/
		timePicker: false,
		changeMonth: true, /*allows user to use a dropdown menu to change month*/
		changeYear: true /*allows user to use a dropdown menu to change year*/
	}
	);
</script>